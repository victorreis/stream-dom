{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es5", "esnext"],
    "jsx": "react-jsx",
    "types": ["node", "jest", "react", "react-dom"],
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        "minify": true
      }
    ]
  }
}
